@model TextMatch.ViewModels.InputViewModel
@{
    ViewData["Title"] = "Text Match";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<h2>Please type text and subtext</h2>
<form>
    <div class="form-group">
        <span asp-validation-summary="ModelOnly"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <input asp-for="Text" id="text" class="form-control" type="text" />
        <span asp-validation-for="Text"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subtext">Subtext</label>
        <input asp-for="Subtext" id="subtext" class="form-control" type="text" />
        <span asp-validation-for="Subtext"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-success btn-sm" value="Match strings" onclick="getTextMatch()"/>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    //$(document).ready(function () {
    function getTextMatch() {
            $.ajax({
                url: "/api/matchString/findMatch",
                type: "get", 
                data: {
                    text: $("#text").val(),
                    subtext: $("#subtext").val()
                }
            })
                .done(function (data) {
                    //$("#response").html(data)
                    alert(data);
                })
                .fail(function (data) {
                    alert(data.responseText);
                });

        }

    //});
</script>
